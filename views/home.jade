extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				#user
					h1.text-center.login-title Welcome #{user.firstName}. Check your details below:
						div.signup-wall
							ul.user-details
								li Username ---> #{user.username || user.fb.username}
								li Email    ---> #{user.email || user.fb.email }
								li First Name ---> #{user.firstName || user.fb.firstName } 
								li Last Name ---> #{user.lastName || user.fb.lastName }
						a(href='/signout', class='text-center new-account') Sign Out